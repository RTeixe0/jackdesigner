{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "baseUrl": ".", // ✅ precisa para o alias "@/*"
    "paths": { "@/*": ["./*"] },

    // Opcionais (bons com TS 5 + bundlers modernos):
    // "verbatimModuleSyntax": true,      // melhora checagem de ESM/CJS
    // "noUncheckedIndexedAccess": true,  // segurança extra com indexação
    // "forceConsistentCasingInFileNames": true

    "plugins": [{ "name": "next" }],
    "allowJs": true // deixe true só se você realmente usar .js
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
